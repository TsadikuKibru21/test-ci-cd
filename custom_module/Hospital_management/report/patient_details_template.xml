<?xml version="1.0"?>
<odoo>
    <!-- Define the patient report template -->
    <template id="report_patient_detail">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="patient">
                <t t-call="web.external_layout">
                    <!-- Header Section -->
                    <div class="header">
                        <h2>Patient Information</h2>
                    </div>
                    <!-- Content Section -->
                    <div class="content">
                        <!-- Patient Details -->
                        <div class="patient-details">
                            <p>
                                <strong>Name:</strong>
                                <span t-field="patient.name"/>
                            </p>
                            <p>
                                <strong>Age:</strong>
                                <span t-field="patient.age"/>
                            </p>
                            <p>
                                <strong>Gender:</strong>
                                <span t-field="patient.gender"/>
                            </p>
                            <!-- Add more patient details fields as needed -->
                        </div>
                    </div>
                    <!-- Footer Section -->
                    <div class="footer">
                        <p>Generated by:
                            <span t-field="user.name"/>
                        </p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
